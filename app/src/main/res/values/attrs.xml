<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--箭头文字-->
    <declare-styleable name="ArrowLayout">
        <attr name="arrowTitle" format="string" />
        <attr name="arrowDesc" format="string" />
        <attr name="arrowTitleImg" format="reference" />
        <attr name="arrowDescColor" format="color" />
        <attr name="arrowLine" format="boolean" />
    </declare-styleable>

    <!-- 提交动画按钮 -->
    <declare-styleable name="CircleSubmitButton">

        <attr name="buttonText" format="string" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonBackground" format="color" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="buttonAnimationDuration" format="float" />
        <attr name="buttonOkColor" format="color" />
        <attr name="buttonMoveupDistance" format="float" />

    </declare-styleable>

</resources>