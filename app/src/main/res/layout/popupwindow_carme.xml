<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_x10"
        android:background="@drawable/shape_grayframewhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_carme_popuwindow"
            style="@style/text_black_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_x10"
            android:text="拍照" />

        <include layout="@layout/layout_grayline" />

        <TextView
            android:id="@+id/tv_image_popuwindow"
            style="@style/text_black_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_x10"
            android:text="从手机相册选择" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_popuwindow"
        style="@style/text_gray_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_x10"
        android:background="@drawable/shape_grayframewhite"
        android:gravity="center"
        android:padding="@dimen/dimen_x10"
        android:text="取消" />

</LinearLayout>