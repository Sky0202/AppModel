<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/color_gray_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_pic_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_arrow_title"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_pic_left"
            android:singleLine="true"
            tools:text="选项" />

        <TextView
            android:id="@+id/tv_arrow_desc"
            android:textSize="14sp"
            android:textColor="@color/color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/iv_arrow_right"
            android:layout_toRightOf="@+id/tv_arrow_title"
            android:gravity="right"
            android:singleLine="true"
            android:text="内容" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="15dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/icon_jiantouright" />

    </RelativeLayout>

</RelativeLayout>